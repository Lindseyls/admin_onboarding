<h1>Employees</h1>
<%= link_to "Add Employee", new_employee_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Hire Date</th>
      <th>Department</th>
      <th>Role</th>
      <th>Onboarding</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |emp| %>
      <tr>
        <td><%= emp.name %></td>
        <td><%= emp.email %></td>
        <td><%= emp.hire_date %></td>
        <td><%= emp.department.name %></td>
        <td><%= emp.role.title %></td>
        <td><%= emp.onboarding_status %></td>
        <td>
          <%= link_to "Show", employee_path(emp) %> |
          <%= link_to "Edit", edit_employee_path(emp) %> |
          <%= link_to "Delete", employee_path(emp), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
